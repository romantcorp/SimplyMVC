@{
    ViewBag.Title = "Записная книжка"; };

   


   
<div class="jumbotron">
    <h1>@ViewBag.Title </h1>
    <p class="lead">Позволяет заносить сотрудников, производить поиск по сотрудникам</p>
</div>

<div class="row">
    <div class="col-md-3">
        <form method="post"  action ="Home/AddRecord" >   <! Form for Add new people>
            <h4>Введите Имя</h4>
            <p><input name="FirstName" type="text"  id="Add" class="form-control" placeholder="Иван"/>
            </p><h4>Введите Фамилию </h4>
            <p><input name="LastName" type="text" class="form-control" placeholder="Иванович" />
            </p><h4>Введите дату рождения </h4> <p>
             <input name="Data" type="date"    class="form-control" />
            </p><h4>Введите номер телефона </h4>
            <p> <input name="Phone" type="text" class="form-control" placeholder="90638888888" /> </p>
            <p><button type="submit" class="btn btn-default">Запись</button></p>
                            
                </form>
        </div>
   
    <!Form for search people in collection>

    <div class="col-md-3 col-md-offset-0">
        <form method="post" action="Home/FindRes">
            <h4>Введите данные поиска</h4>
            <p> <input name="FindName" type="text" class="form-control" placeholder="Иван" />
                
            <p><button type="submit" class="btn btn-default">Поиск</button></p>
            </form>
       </div>

        <!Data for sorting>
    <div class="col-md-3 col-md-offset-0">
        <form method="post" action="Home/Sort">
            <h4>Сортировка по фамилии</h4>
            <p><button type="submit" class="btn btn-default">По фамилии</button><p>
        </form>
    </div>

    <div class="col-md-3 col-md-offset-0">
        <form method="post" action="Home/DSort">
            <h4>Сортировка по дате</h4>
         <p><button type="submit" class="btn btn-default">По дате</button><p>
        </form>
</div>





    </div>
    

    